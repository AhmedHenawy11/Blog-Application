<div class="author">
    <h1 class="author__heading">Hi, I Ahmed Henawy.</h1>
    <p class="author__body">Software developer and Business developer.</p>
  </div>
  
  <img src="images/bg1.jpg" alt="person looking out through window" class="hero-image" width="540" height="360">
  
<section>
    <h2 class="articles__heading">Latest Posts</h2>
  
    <ul class="article-ul">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post.id %> ">
            <span><%= post.title %> </span>
            <span class="article-list__date"><%= post.createdAt.toDateString() %> </span>
          </a>
        </li>
      <% }) %>

      <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
      <% } %>

    </ul>
</section>